<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context="com.example.puzzle.Views.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Score"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="80"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="#fff"

            android:textSize="30sp" />

        <Chronometer
            android:id="@+id/textTimer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="01:23"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/buttonFinish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:text="Back"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/buttonRestart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:text="Restart"
            android:textColor="#fff"
            android:textSize="24sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <RelativeLayout
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/bt_1"
                style="@style/ButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/bt_2"
                style="@style/ButtonStyle"
                android:layout_toRightOf="@id/bt_1"
                android:text="2" />

            <Button
                android:id="@+id/bt_3"
                style="@style/ButtonStyle"
                android:layout_toRightOf="@id/bt_2"
                android:text="3" />

            <Button
                android:id="@+id/bt_4"
                style="@style/ButtonStyle"
                android:layout_toRightOf="@id/bt_3"
                android:text="4" />

            <Button
                android:id="@+id/bt_5"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_1"
                android:text="5" />

            <Button
                android:id="@+id/bt_6"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_1"
                android:layout_toRightOf="@id/bt_1"
                android:text="6" />

            <Button
                android:id="@+id/bt_7"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_1"
                android:layout_toRightOf="@id/bt_2"
                android:text="7" />

            <Button
                android:id="@+id/bt_8"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_1"
                android:layout_toRightOf="@id/bt_3"
                android:text="8" />

            <Button
                android:id="@+id/bt_9"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_5"
                android:text="9" />

            <Button
                android:id="@+id/bt_10"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_5"
                android:layout_toRightOf="@id/bt_1"
                android:text="10" />

            <Button
                android:id="@+id/bt_11"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_5"
                android:layout_toRightOf="@id/bt_2"
                android:text="11" />

            <Button
                android:id="@+id/bt_12"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_5"
                android:layout_toRightOf="@id/bt_3"
                android:text="12" />

            <Button
                android:id="@+id/bt_13"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_9"
                android:text="13" />

            <Button
                android:id="@+id/bt_14"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_9"
                android:layout_toRightOf="@id/bt_1"
                android:text="10" />

            <Button
                android:id="@+id/bt_15"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_9"
                android:layout_toRightOf="@id/bt_2"
                android:text="15" />

            <Button
                android:id="@+id/bt_16"
                style="@style/ButtonStyle"
                android:layout_below="@+id/bt_9"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/bt_3" />

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
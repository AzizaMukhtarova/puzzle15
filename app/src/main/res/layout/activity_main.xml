<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.puzzle.Views.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Score"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Time"
                    android:textSize="20sp" />

                <Chronometer
                    android:id="@+id/textTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:23"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/bt_1"
                    style="@style/ButtonStyle"
                    android:text="1" />

                <Button
                    android:id="@+id/bt_2"
                    style="@style/ButtonStyle"
                    android:layout_toRightOf="@id/bt_1"
                    android:text="2" />

                <Button
                    android:id="@+id/bt_3"
                    style="@style/ButtonStyle"
                    android:layout_toRightOf="@id/bt_2"
                    android:text="3" />

                <Button
                    android:id="@+id/bt_4"
                    style="@style/ButtonStyle"
                    android:layout_toRightOf="@id/bt_3"
                    android:text="4" />

                <Button
                    android:id="@+id/bt_5"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_1"
                    android:text="5" />

                <Button
                    android:id="@+id/bt_6"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_1"
                    android:layout_toRightOf="@id/bt_1"
                    android:text="6" />

                <Button
                    android:id="@+id/bt_7"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_1"
                    android:layout_toRightOf="@id/bt_2"
                    android:text="7" />

                <Button
                    android:id="@+id/bt_8"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_1"
                    android:layout_toRightOf="@id/bt_3"
                    android:text="8" />

                <Button
                    android:id="@+id/bt_9"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_5"
                    android:text="9" />

                <Button
                    android:id="@+id/bt_10"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_5"
                    android:layout_toRightOf="@id/bt_1"
                    android:text="10" />

                <Button
                    android:id="@+id/bt_11"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_5"
                    android:layout_toRightOf="@id/bt_2"
                    android:text="11" />

                <Button
                    android:id="@+id/bt_12"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_5"
                    android:layout_toRightOf="@id/bt_3"
                    android:text="12" />

                <Button
                    android:id="@+id/bt_13"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_9"
                    android:text="13" />

                <Button
                    android:id="@+id/bt_14"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_9"
                    android:layout_toRightOf="@id/bt_1"
                    android:text="10" />

                <Button
                    android:id="@+id/bt_15"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_9"
                    android:layout_toRightOf="@id/bt_2"
                    android:text="15" />

                <Button
                    android:id="@+id/bt_16"
                    style="@style/ButtonStyle"
                    android:layout_below="@+id/bt_9"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/bt_3" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonFinish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="Back"
                android:textColor="#fff" />

            <Space
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonRestart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="Restart"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#998BC34A"
        android:visibility="invisible"
        android:clickable="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="O'yinni davom etirishni xohlaysizmi?"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_cancel_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Bekor qilish"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_continue_confirm"
                app:layout_constraintTop_toBottomOf="@id/confirm_text" />

            <Button
                android:id="@+id/btn_continue_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="davom ettirish"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn_cancel_confirm"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirm_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>




</FrameLayout>